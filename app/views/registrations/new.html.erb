<div class="page-header">
  <h1>join
    <small>life without hashtags</small>
  </h1>
</div>

<%= form_for @user, :html => {:class => "form-horizontal", :role => "form"} do |f| %>
  <% if @user.errors.any? %>
    <span class="notice"><%= flash[:notice] = "all fields are required" %></span>
  <% end %>
  <div class="form-group">
    <%= f.label :first_name, "first name", :class => "col-md-4 control-label", :id => "form_label" %>
    <%= f.text_field :first_name, :class => "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :last_name, "last name", :class => "col-md-4 control-label", :id => "form_label" %>
    <%= f.text_field :last_name, :class => "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :email, "email", :class => "col-md-4 control-label", :id => "form_label" %>
    <%= f.email_field :email, :class => "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :password, "password", :class => "col-md-4 control-label", :id => "form_label" %>
    <%= f.password_field :password, :class => "form-control" %>
  </div>
  <%= f.submit "join" %>
<% end %>